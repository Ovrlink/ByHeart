<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ocean"
    tools:context=".presentation.load.Load_screen">
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/love_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:contentDescription="logotype" />
    <TextView
        android:textColor="@color/heart"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:text="Welcome to ByHeart!"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/dsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="It`s a comfort space to learn and improve your English"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/enter"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_below="@id/dsc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/heart"
        android:text="Enter the app"
        android:textColor="@color/white"
        tools:ignore="TextSizeCheck" />

</RelativeLayout>